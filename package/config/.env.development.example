# SimpleSAMLphp Environment Configuration for Development/Testing
# Copy this file to .env for development testing

# Basic Configuration
SIMPLESAML_BASE_URL=https://dev.your-domain.com/simplesaml/
SIMPLESAML_COOKIE_DOMAIN=.dev.your-domain.com

# Security Settings (Development - use secure values in production!)
SIMPLESAML_SECRET_SALT=development-secret-salt-change-in-production
SIMPLESAML_ADMIN_PASSWORD=admin123

# Technical Contact
SIMPLESAML_TECH_NAME=Development Team
SIMPLESAML_TECH_EMAIL=dev@your-domain.com

# Security Settings (relaxed for development)
SIMPLESAML_PROTECT_INDEX=false
SIMPLESAML_PROTECT_METADATA=false
SIMPLESAML_COOKIE_SECURE=false

# SAML Configuration
SIMPLESAML_SP_ENTITY_ID=https://dev.your-domain.com
SIMPLESAML_DEFAULT_IDP=example-userpass

# Session Configuration
SIMPLESAML_SESSION_LIFETIME=0

# Logging
SIMPLESAML_LOG_LEVEL=DEBUG
SIMPLESAML_LOG_HANDLER=file
SIMPLESAML_LOG_FILE=simplesamlphp.log

# Store Type
SIMPLESAML_STORE_TYPE=phpsession

# Development Mode
SIMPLESAML_DEBUG=true
SIMPLESAML_SHOW_ERRORS=true
SIMPLESAML_ERROR_REPORTING=true
SIMPLESAML_ENABLE_EXAMPLE_AUTH=true

# Timezone
TZ=America/New_York

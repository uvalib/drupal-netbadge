# Environment Variables for Development
# Copy this file to .env and customize for your environment

# DDEV Configuration
DDEV_PROJECT_NAME=drupal-netbadge
DDEV_PHP_VERSION=8.2

# SimpleSAMLphp Configuration
SIMPLESAMLPHP_SECRET_SALT=your-secret-salt-here-change-this
SIMPLESAMLPHP_ADMIN_PASSWORD=admin123

# SAML Configuration
SAML_SP_ENTITY_ID=https://drupal-netbadge.ddev.site
SAML_IDP_ENTITY_ID=https://netbadge.example.edu

# NetBadge Configuration
NETBADGE_AUTH_URL=https://netbadge.example.edu/auth
NETBADGE_VALIDATE_URL=https://netbadge.example.edu/validate
NETBADGE_LOGOUT_URL=https://netbadge.example.edu/logout

# AWS Configuration (for pipeline)
AWS_REGION=us-east-1
CONTAINER_REGISTRY=your-account.dkr.ecr.us-east-1.amazonaws.com
CONTAINER_IMAGE=drupal-netbadge

# Database Configuration
DB_NAME=db
DB_USER=db
DB_PASSWORD=db
DB_HOST=db
